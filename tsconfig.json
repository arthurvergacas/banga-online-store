{
  "compilerOptions": {
    "incremental": true,
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./bin"
  },
  "include": ["packages/**/*"]
}
